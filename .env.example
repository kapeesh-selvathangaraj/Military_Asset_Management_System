# Military Asset Management System - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===================================
# DATABASE CONFIGURATION
# ===================================
# PostgreSQL Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=military_assets
DB_USER=military_user
DB_PASSWORD=your_secure_password_here

# Full Database URL (alternative to individual settings)
DATABASE_URL=postgresql://military_user:your_secure_password_here@localhost:5432/military_assets

# Connection Pool Settings
POOL_MODE=direct
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# ===================================
# JWT & AUTHENTICATION
# ===================================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000

# ===================================
# SERVER CONFIGURATION
# ===================================
# Server Port
PORT=5000

# Environment Mode
NODE_ENV=development

# Server URL
SERVER_URL=http://localhost:5000

# ===================================
# FRONTEND CONFIGURATION
# ===================================
# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Additional allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===================================
# SECURITY SETTINGS
# ===================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true

# SSL/HTTPS Settings
ENABLE_HTTPS=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# ===================================
# LOGGING CONFIGURATION
# ===================================
# Log Levels: error, warn, info, debug
LOG_LEVEL=info

# Log File Paths
LOG_DIR=./logs
ERROR_LOG_FILE=error.log
COMBINED_LOG_FILE=combined.log
AUDIT_LOG_FILE=audit.log

# Enable/Disable Logging
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# ===================================
# EMAIL CONFIGURATION (Optional)
# ===================================
# SMTP Settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# Email Templates
FROM_EMAIL=noreply@military-assets.gov.in
ADMIN_EMAIL=admin@military-assets.gov.in

# ===================================
# BACKUP & MAINTENANCE
# ===================================
# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance

# ===================================
# MONITORING & ANALYTICS
# ===================================
# Application Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=military-asset-management
APM_SERVER_URL=http://localhost:8200

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# ===================================
# MILITARY SPECIFIC SETTINGS
# ===================================
# Default Military Settings
DEFAULT_COUNTRY=India
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR

# Classification Levels
ENABLE_CLASSIFICATION=true
DEFAULT_CLASSIFICATION=RESTRICTED

# Audit Requirements
AUDIT_RETENTION_YEARS=7
ENABLE_DETAILED_AUDIT=true

# ===================================
# DEVELOPMENT SETTINGS
# ===================================
# Development Tools (only for NODE_ENV=development)
ENABLE_DEBUG_ROUTES=false
ENABLE_MOCK_DATA=false
ENABLE_SWAGGER_DOCS=false

# Hot Reload Settings
ENABLE_HOT_RELOAD=true
WATCH_FILES=true

# ===================================
# PRODUCTION OVERRIDES
# ===================================
# These settings are automatically applied in production
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_DEBUG_ROUTES=false
# ENABLE_MOCK_DATA=false
# RATE_LIMIT_MAX_REQUESTS=50
